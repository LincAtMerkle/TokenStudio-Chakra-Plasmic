.button__container {
    line-height: var(--button-line-height);
    border-radius: var(--button-border-radius);
    font-weight: var(--button-font-weight);
    &:hover {
        background-color: var(--button-primary1-hover-background-color);
        color: var(--button-primary1-hover-text-color);
        border-color: var(--button-primary1-hover-border-color);
        > span {
            color: var(--button-primary1-hover-icon-color);
        }
    }
}